{
  "name": "fit-box",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "dist/fit-box.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdx watch",
    "dist": "trash dist && npm run prettier-production && npm run test-coverage && tsdx build",
    "test": "tsdx test",
    "test-watch": "tsdx test --watchAll",
    "test-coverage": "trash coverage && tsdx test --coverage",
    "lint": "tsdx lint",
    "prettier": "prettier --write \"{**/*,*}.{md,ts}\"",
    "prettier-production": "prettier --list-different \"{**/*,*}.{md,ts}\"",
    "prettier-staged": "pretty-quick --staged --pattern \"{**/*,*}.{md,ts}\""
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "husky": "^3.0.4",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "trash-cli": "^3.0.0",
    "tsdx": "^0.9.0",
    "tslib": "^1.10.0",
    "typescript": "^3.6.2"
  }
}

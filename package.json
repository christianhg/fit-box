{
  "name": "fit-box",
  "version": "1.1.0",
  "description": "Fits a box within a boundary while keeping its original aspect ratio",
  "keywords": [
    "geometry",
    "rectangles",
    "boxes",
    "fit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/christianhg/fit-box.git"
  },
  "author": "Christian Hamburger Gr√∏ngaard <christianhg@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/christianhg/fit-box",
  "bugs": "https://github.com/christianhg/fit-box/issues",
  "main": "dist/index.js",
  "module": "dist/fit-box.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdx watch",
    "dist": "trash dist && npm run prettier-production && npm run test && tsdx build --format esm,cjs,umd --name fit-box",
    "test": "trash coverage && tsdx test --coverage",
    "test-watch": "tsdx test --watchAll",
    "lint": "tsdx lint",
    "prettier": "prettier --write \"{**/*,*}.{md,ts}\"",
    "prettier-production": "prettier --list-different \"{**/*,*}.{md,ts}\"",
    "prettier-staged": "pretty-quick --staged --pattern \"{**/*,*}.{md,ts}\"",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "box-generator": "^2.0.0",
    "coveralls": "^3.1.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "trash-cli": "^5.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  }
}
